<%- include("Header_admin.ejs"); -%>


<form action="admin_testReports" method="POST" class="padding-new">
  <h1>Please enter the following to add test report</h1>
  <br><br>
  <div class="form-row">
    <div class="form-group col-md-3">
      <label for="rep_no">Report Number</label>
      <input type="number" class="form-control" name="rep_no" min="100" max="999" required>
    </div>
    <div class="form-group col-md-5">
      <label for="testname">Test Name</label>
      <select class="custom-select d-block w-100" name="testname" required>
        <option value="">Choose...</option>
        <% for (var i=0; i<tests.length; i++){ %>
          <option><%= tests[i].testname %></option>
        <% } %>
      </select>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-8">
      <label for="diagnosis">Diagnosis</label>
      <input type="text" class="form-control" name="diagnosis" required>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="docid">Doctor ID</label>
      <select class="custom-select d-block w-100" name="docid" required>
        <option value="">Choose...</option>
        <% for (var i=0; i<doctors.length; i++){ %>
          <option><%= doctors[i].docid %></option>
        <% } %>
      </select>
    </div>
    <div class="form-group col-md-4">
      <label for="pid">Patient ID</label>
      <select class="custom-select d-block w-100" name="pid" required>
        <option value="">Choose...</option>
        <% for (var i=0; i<patients.length; i++){ %>
          <option><%= patients[i].pid %></option>
        <% } %>
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-outline-primary">Add test-report</button>
</form>

<%- include("Footer_admin.ejs"); -%>
