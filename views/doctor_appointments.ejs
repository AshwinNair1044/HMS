<%-  include("Header_doctor.ejs"); -%>

<div class="padding">
  <br><br>
  <h1>Here are your appointments for the day <%= doctorName %></h1>
  <br><br>
  <% if (tuple.length===0){ %>
    <h2>You don't have any appointments today</h2>
  <% } %>
  <% if (tuple.length>0){ %>
    <table class="table table-hover table-bordered">
      <thead class="thead-dark">
        <tr>
          <th>Appointment date</th>
          <th>Appointment time</th>
          <th>patient</th>
        </tr>
      </thead>
      <tbody>
        <% for (var j=0; j<tuple.length; j++){ %>
          <tr>
              <td>
                <%= tuple[j].appdate %>
              </td>
              <td>
                <%= tuple[j].apptime %>
              </td>
              <td>
                <%= tuple[j].pid %>
              </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  <% } %>
</div>

<%-  include("Footer_doctor.ejs"); -%>
