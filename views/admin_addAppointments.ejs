<%- include("Header_admin.ejs"); -%>

<form action="admin_appointments" method="POST" class="padding-new">
  <h1>Please enter the following to add an appointment</h1>
  <br><br>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="appdate">Appointment Date</label>
      <input type="text" class="form-control" name="appdate" required>
    </div>
    <div class="form-group col-md-4">
      <label for="apptime">Appointment Time</label>
      <input type="text" class="form-control" name="apptime" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="docid">Doctor ID</label>
      <select class="custom-select d-block w-100" name="docid" required>
        <option value="">Choose...</option>
        <% for (var i=0; i<doctors.length; i++){ %>
          <option><%= doctors[i].docid %></option>
        <% } %>
      </select>
    </div>
    <div class="form-group col-md-4">
      <label for="pid">Patient ID</label>
      <select class="custom-select d-block w-100" name="pid" required>
        <option value="">Choose...</option>
        <% for (var i=0; i<patients.length; i++){ %>
          <option><%= patients[i].pid %></option>
        <% } %>
      </select>
    </div>
  </div>

  <button type="submit" class="btn btn-outline-primary">Add appointment</button>
</form>

<%- include("Footer_admin.ejs"); -%>
